<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".organizer.OrganizerEventDetailsScreen">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_left_arrow"
        app:tint="@color/navy"
        android:contentDescription="Back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Screen Title -->
    <TextView
        android:id="@+id/tvOrganizerDetailsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organizer View"
        android:textColor="@color/navy"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Event Name -->
    <TextView
        android:id="@+id/tvEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:textColor="@color/navy"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvOrganizerDetailsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <!-- MAIN SCROLL AREA -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/detailsScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tvEventName"
        app:layout_constraintBottom_toTopOf="@id/actionButtonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- POSTER IMAGE -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivEventPoster"
                android:layout_width="375dp"
                android:layout_height="300dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/sample_event" />



            <!-- DATE + TIME BLOCK -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_date"
                    app:tint="@color/navy" />

                <TextView
                    android:id="@+id/tvEventDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date Time"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingStart="8dp" />
            </LinearLayout>



            <!-- LOCATION BLOCK -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_location"
                    app:tint="@color/navy" />

                <TextView
                    android:id="@+id/tvEventLocation"
                    android:text="Event Location"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



            <!-- REGISTRATION PERIOD BLOCK -->
            <LinearLayout
                android:id="@+id/llRegisterPeriod"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_clock"
                    app:tint="@color/navy" />

                <TextView
                    android:id="@+id/tvRegisterPeriod"
                    android:text="Register Close Time"
                    android:paddingStart="8dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



            <!-- DIVIDER -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="12dp"
                android:background="@color/navy" />



            <!-- WAITLIST HEADER WITH TOGGLE -->
            <LinearLayout
                android:id="@+id/sectionWaitlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tvWaitlistHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Waitlist"
                    android:textStyle="bold"
                    android:textColor="@color/navy"
                    android:textSize="22sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/iconWaitlistToggle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:tint="@color/navy"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvWaitlistEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No users on waitlist."
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvWaitlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />




            <LinearLayout
                android:id="@+id/sectionSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tvSelectedHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Selected"
                    android:textStyle="bold"
                    android:textColor="@color/navy"
                    android:textSize="22sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/iconSelectedToggle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:tint="@color/navy"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvSelectedEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No selected users yet."
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"/>


            <LinearLayout
                android:id="@+id/sectionNotSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tvNotSelectedHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Not Selected"
                    android:textStyle="bold"
                    android:textColor="@color/navy"
                    android:textSize="22sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/iconNotSelectedToggle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:tint="@color/navy"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvNotSelectedEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No not-selected users yet."
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvNotSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"/>



            <LinearLayout
                android:id="@+id/sectionEnrolled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tvEnrolledHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Enrolled"
                    android:textStyle="bold"
                    android:textColor="@color/navy"
                    android:textSize="22sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/iconEnrolledToggle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:tint="@color/navy"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvEnrolledEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No enrolled users yet."
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvEnrolled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"/>


            <LinearLayout
                android:id="@+id/sectionCancelled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tvCancelledHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Cancelled"
                    android:textStyle="bold"
                    android:textColor="@color/navy"
                    android:textSize="22sp"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/iconCancelledToggle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:tint="@color/navy"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvCancelledEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No cancelled users yet."
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCancelled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"/>


            <!-- QR CODE -->
            <ImageView
                android:id="@+id/imageQRCode"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:contentDescription="QR Code"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



    <!-- THREE BUTTONS INLINE: CENTER BUTTON = LOTTERY -->
    <LinearLayout
        android:id="@+id/actionButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/navigationBar">

        <!-- LEFT: Export CSV -->
        <Button
            android:id="@+id/btnExportCsv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Export CSV"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/material_blue_grey_800"
            android:layout_marginEnd="4dp" />

        <!-- MIDDLE: Lottery -->
        <Button
            android:id="@+id/btnLottery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Lottery"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/navy"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" />

        <!-- RIGHT: Map -->
        <Button
            android:id="@+id/btnViewWaitlistMap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="View Entrant Map"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/navy"
            android:layout_marginStart="4dp" />

    </LinearLayout>



    <!-- BOTTOM NAV BAR -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/navy"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_home"
            android:padding="4dp"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/btnOpenEvents"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_event"
            android:padding="4dp"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/btnNotification"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_notification"
            android:padding="4dp"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/btnEventHistory"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_history"
            android:padding="4dp"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_profile"
            android:padding="4dp"
            app:tint="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
