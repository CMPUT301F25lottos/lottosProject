<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".organizer.OrganizerEventDetailsScreen">

    <LinearLayout
        android:id="@+id/contentArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Event title -->
                <TextView
                    android:id="@+id/tvEventName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Name"
                    android:textAlignment="center"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/navy"
                    android:paddingBottom="8dp" />

                <!-- Basic Info -->
                <TextView
                    android:id="@+id/tvEventDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    android:textSize="16sp"
                    android:paddingBottom="2dp"/>

                <TextView
                    android:id="@+id/tvEventTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time:"
                    android:textSize="16sp"
                    android:paddingBottom="2dp"/>

                <TextView
                    android:id="@+id/tvEventLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location:"
                    android:textSize="16sp"
                    android:paddingBottom="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/navy" />

                <!-- WAITLIST -->
                <LinearLayout
                    android:id="@+id/sectionWaitlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/tvWaitlistHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Waitlist"
                        android:textSize="18sp"
                        android:textColor="@color/navy"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/containerWaitlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="4dp" >

                        <TextView
                            android:id="@+id/tvWaitlistEmpty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No users on waitlist."
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- SELECTED -->
                <LinearLayout
                    android:id="@+id/sectionSelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/tvSelectedHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selected"
                        android:textSize="18sp"
                        android:textColor="@color/navy"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/containerSelected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="4dp" >

                        <TextView
                            android:id="@+id/tvSelectedEmpty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No selected users yet."
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- NOT SELECTED -->
                <LinearLayout
                    android:id="@+id/sectionNotSelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/tvNotSelectedHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Not Selected"
                        android:textSize="18sp"
                        android:textColor="@color/navy"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/containerNotSelected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="4dp" >

                        <TextView
                            android:id="@+id/tvNotSelectedEmpty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No not-selected users yet."
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ENROLLED -->
                <LinearLayout
                    android:id="@+id/sectionEnrolled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="12dp">

                    <TextView
                        android:id="@+id/tvEnrolledHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enrolled"
                        android:textSize="18sp"
                        android:textColor="@color/navy"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/containerEnrolled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="4dp" >

                        <TextView
                            android:id="@+id/tvEnrolledEmpty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No enrolled users yet."
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- CANCELLED -->
                <LinearLayout
                    android:id="@+id/sectionCancelled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:id="@+id/tvCancelledHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cancelled"
                        android:textSize="18sp"
                        android:textColor="@color/navy"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/containerCancelled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="4dp" >

                        <TextView
                            android:id="@+id/tvCancelledEmpty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No cancelled users yet."
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <!-- Bottom Nav -->
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/navy"
        android:gravity="center"
        android:weightSum="5">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_home"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/btnOpenEvents"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_event"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/btnNotification"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_notification"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/btnEventHistory"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_history"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_profile"
            app:tint="@color/white" />

    </LinearLayout>

</LinearLayout>
