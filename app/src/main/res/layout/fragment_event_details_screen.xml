<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".events.EventDetailsScreen"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Event title -->
        <TextView
            android:id="@+id/tvEventDetails"
            android:text="Event Detail"
            android:textColor="@color/navy"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"/>

        <!-- Optional image -->

        <!-- CIRCULAR PROFILE IMAGE -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivEventPoster"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_placeholder"
            android:background="@color/beige"
            app:tint="@color/navy"
            app:layout_constraintTop_toBottomOf="@id/tvEventDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Event details list -->
        <LinearLayout
            android:id="@+id/llEventDetails"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivEventPoster"
            android:layout_marginTop="12dp">

            <TextView android:id="@+id/tvOrganizer" android:text="Organizer:" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvLocation" android:text="Location:" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvStartTime" android:text="Start Time:" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvEndTime" android:text="End Time:" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvDescription" android:text="Description:" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity:" />
            <TextView android:id="@+id/tvWLCount" android:text="Number of Entrants on WaitList:" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvWLSize" android:text="WaitList Capacity:" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:id="@+id/tvWLCloseDateTime" android:text="WaitList Closes/Closed:" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@id/navigationBar"

            android:padding="8dp">

            <Button
                android:id="@+id/btnJoin"
                android:text="Join WaitList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/navy"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnLeave"
                android:text="Leave WaitList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/navy"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnAccept"
                android:text="Accept Invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/navy"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnDecline"
                android:text="Decline Invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/navy"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnViewWaitList"
                android:text="View WaitList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/navy"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnViewSelected"
                android:text="View Selected Entrants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/navy"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnViewCancelled"
                android:text="View Cancelled Entrants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/navy"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnViewEnrolled"
                android:text="View Enrolled Entrants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/navy"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnLottery"
                android:text="Start Lottery System"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/navy"/>

            <Button
                android:id="@+id/btnBack"
                android:text="Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/navy"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigationBar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@color/navy"
            android:gravity="center"
            android:weightSum="3"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageButton
                android:id="@+id/btnNotification"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_notification"
                android:padding="4dp"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_home"
                android:padding="4dp"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btnProfile"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_profile"
                android:padding="4dp"
                app:tint="@color/white" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>