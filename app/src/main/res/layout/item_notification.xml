<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="8dp"
android:layout_marginBottom="8dp"
app:cardCornerRadius="12dp"
app:cardElevation="4dp"
android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- User Profile Icon -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@color/navy"
            android:gravity="center"
            android:text="MONTH\nDATE"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/notificaiton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnDelete"
            app:layout_constraintStart_toEndOf="@id/tvDate"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvNotificationSenderInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="12sp"
                android:textStyle="italic"
                tools:text="From: Admin" />

            <!-- This new RelativeLayout helps position the sender name to the top-right -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- The Event Name -->
                <TextView
                    android:id="@+id/TVEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_toStartOf="@+id/tvSender"
                    android:text="Event Name"
                    android:textColor="@color/navy"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- SENDER NAME - ONLY VISIBLE FOR ADMIN -->
                <TextView
                    android:id="@+id/tvSender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="end"
                    android:textColor="@color/navy"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:visibility="gone"
                    tools:text="from: organizer"
                    tools:visibility="visible" />

            </RelativeLayout>

            <!-- The Notification Message -->
            <TextView
                android:id="@+id/TVMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message ..."
                android:textColor="@color/navy"
                android:textSize="15sp"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:contentDescription="Delete Notification"
            android:src="@drawable/ic_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/navy" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

